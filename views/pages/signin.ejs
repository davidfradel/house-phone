<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <section id="services" class="page">
            <div class="container">
                <div class="content text-center">
                    <div class="heading">
                        <h2 class="mt-0 mb-4">S'inscrire</h2>
                        <div class="border"></div>
                    </br>
                        <form action="/signin" method="post" oninput='password2.setCustomValidity(password2.value != password.value ? "Les deux mots de passe ne sont pas identiques" : "")'>
                            <div class="form-group">
                              <label for="email">Email</label>
                              <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" oninvalid="this.setCustomValidity('Le champ Email est obligatoire')" required>
                            </div>
                            <div class="form-group">
                              <label for="password">Mot de passe</label>
                              <input type="password" class="form-control" id="password"  name="password" oninvalid="this.setCustomValidity('Le champ Mot de passe est obligatoire')" required>
                            </div>
                            <div class="form-group">
                                <label for="passwordConfirmation">Confirmation du mot de passe</label>
                                <input type="password" class="form-control" id="passwordConfirmation" name="password2" oninvalid="this.setCustomValidity('Les deux mots de passe ne sont pas identiques')" required>
                            </div>
                            <button type="submit" class="btn btn-success">Inscription</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
     </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>